{
  "name": "increment",
  "version": "0.0.0-development",
  "license": "MIT License",
  "repository": "https://github.com/action-pack/increment",
  "scripts": {
    "lint": "eslint . --fix",
    "build": "ncc build index.js -m -o dist",
    "build_stats": "ncc build index.js -m -s --stats-out dist/stats -o dist"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "eslint-config-strongloop": "^2.1.0",
    "eslint-plugin-jsdoc": "^46.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0"
  },
  "overrides": {
    "@octokit/core": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.js": [
      "eslint . --fix"
    ]
  }
}
